<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_120sdp"
    tools:layout_editor_absoluteY="@dimen/_81sdp">

    <android.support.v7.widget.CardView
        android:id="@+id/card1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_120sdp"
        app:layout_constraintTop_toTopOf="parent">


        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/imageView"
                android:layout_width="@dimen/_90sdp"
                android:layout_height="@dimen/_90sdp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/backgrounddark"
                app:civ_border_color="@color/colorwhite"
                app:civ_border_width="@dimen/_3sdp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_marginStart="@dimen/_8sdp"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>


            <TextView
                android:id="@+id/restaurant_names"
                android:layout_width="@dimen/_180sdp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_35sdp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLength="50"
                android:scrollbars="vertical"
                android:singleLine="true"
                android:text="Alice abcdjnsannksadna"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_20sdp"
                app:layout_constraintStart_toEndOf="@+id/imageView"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/price"
                android:layout_width="@dimen/_200sdp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLength="30"
                android:scrollbars="vertical"
                android:singleLine="true"
                android:text="Lorem ipsum colyjghjghjforfsdfsgdsfsdfsdfsdf"
                app:layout_constraintStart_toStartOf="@+id/restaurant_names"
                app:layout_constraintTop_toBottomOf="@+id/restaurant_names" />

            <!--<ImageView-->
                <!--android:id="@+id/share"-->
                <!--android:layout_width="36sdp"-->
                <!--android:layout_height="36sdp"-->
                <!--android:layout_marginEnd="8sdp"-->
                <!--android:layout_marginRight="8sdp"-->
                <!--android:layout_marginTop="71sdp"-->
                <!--android:background="@drawable/ic_share_red_700_24sdp"-->
                <!--app:layout_constraintEnd_toStartOf="@+id/add_to_fav"-->
                <!--app:layout_constraintTop_toTopOf="parent" />-->

            <ToggleButton
                android:id="@+id/add_to_fav"
                android:layout_width="@dimen/_36sdp"
                android:layout_height="@dimen/_36sdp"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_16sdp"
                android:layout_marginRight="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_25sdp"
                android:background="@drawable/ic_toggle"
                android:clickable="true"
                android:textOff=" "
                android:textOn=" "
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.333" />

        </android.support.constraint.ConstraintLayout>


    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>